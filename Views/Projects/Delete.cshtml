@using ProjectManagementApplication.Models.ProjectsViewModels
@model ProjectDetailsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h3">Delete Project</h1>
<h2 class="h4">Are you sure you want to delete this project?</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Description)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.SprintDuration)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.SprintDuration)</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link">Back</a>
</form>
