@using ProjectManagementApplication.Models.ProjectsViewModels
@model ProjectDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="h3">Project Details</h1>
<hr />

<div>
    <h2 class="h4">@Model.Name</h2>
    <p>@Model.Description</p>
    <p>Sprint duration: @Model.SprintDuration weeks</p>

    <div class="mt-4">
        <h3 class="h5">Assigned Users</h3>
        @if (Model.UsersWithRoles.Any())
        {
            <ul class="list-unstyled">
                @foreach (var u in Model.UsersWithRoles)
                {
                    <li>
                        @u.UserName
                        <small>(@string.Join(", ", u.Roles))</small>
                    </li>
                }
            </ul>
        }
    </div>
</div>

@if (User.IsInRole("Scrum Master"))
{
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary pe-3 ps-3 me-2">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger pe-2 ps-2 me-2">Delete</a>
    </div>
}
<div class="mt-3">
    <a asp-action="Index">Back</a>
</div>
