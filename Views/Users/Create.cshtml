@using ProjectManagementApplication.Authentication;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> userManager;
@model ProjectManagementApplication.Authentication.ApplicationUser;
@{
	ViewData["Title"] = "Register new user";
}
<h1 class="h3">Create new account</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" placeholder="first name" />
                <label asp-for="@Model.FirstName">First name</label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" placeholder="last name" />
                <label asp-for="@Model.LastName">Last name</label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Email" class="form-control" aria-required="true" placeholder="email" />
                <label asp-for="@Model.Email">Email</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Role</label>
                <select name="role" class="form-select">
                    <option>Developer</option>
                    <option>ProductOwner</option>
                    <option>ScrumMaster</option>
                </select>
            </div>
            <button type="submit" class="w-100 btn btn-primary btn-lg mt-4">Register user</button>
        </form>
    </div>
</div>